<Window x:Class="EmployeeManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmployeeManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Text="Hello and Welcome!" Margin="10,10,10,0"></TextBlock>
        <TextBox x:Name="Name" Width="200" Height="20" Margin="10,-50,10,0"/>
        <TextBox x:Name="Age" Width="200" Height="20" Margin="10, 120, 10,0"/>
        <Button Content="Show Text" Width="100" Height="30" Margin="10,300,10,0" Click="ShowTextButton_Click"/>
        <Label Content="Name" HorizontalAlignment="Left" Margin="300,146,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.474,-0.788"/>
        <Label Content="Age" HorizontalAlignment="Left" Margin="304,231,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
